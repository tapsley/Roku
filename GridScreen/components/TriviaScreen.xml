<component name="TriviaScreen" extends="Scene" >
    <script type="text/brightscript" uri="TriviaScreen.brs" />

    <children>
        <Rectangle
            id="background"
            width="1280"
            height="720"
            color="0xFFa342FF" /> 

        <Timer
            id="timer"
            repeat="false"
            duration="1"
        />

        <Label
	        id="questionLabel"
	        width="900"
            wrap="true"
			translation="[130,170]"
            font="font:MediumBoldSystemFont"
	    />

        <LabelList 
            id = "optionLabelList" 
            translation = "[ 130, 300 ]" 
            itemSize = "[ 900, 75 ]" />


        <Group
            id="scoreGroup"
            visible="false">
            <Rectangle
                id="background2"
                width="1280"
                height="720"
                color="0x111111" /> 

            <Label
                id="scoreLabel"
                width="800"
                translation="[130,250]"
                font="font:LargeBoldSystemFont"
            />
            <Label
                width="500"
                text="Press the Replay button to play again!"
                translation="[130,350]"
                font="font:MediumBoldSystemFont"
            />
        </Group>

        
    </children>
</component>